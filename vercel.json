{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    // allow static assets to be served as-is
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/(.*)\.(css|js|png|jpg|jpeg|svg|webp|ico|txt|map)", "dest": "/$1.$2" },
    // SPA fallback
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}